@model GYM.Entity.Athlete
@{
    ViewData["Title"] = "Home Page";

}
<style>
    .AthRpt {
        background-color: rgb(0 0 0 / 0.54);
        width: 230px;
        height: 270px;
        align-items: center;
        display: inline-block;
        border-radius: 10px;
        box-shadow: 2px 2px 30px rgb(255 255 255 / 0.83);
        margin-left: 70px;
        text-decoration: none;
        overflow:hidden;
        position:relative;
 
        transition: all 0.9s;
        padding-bottom: 0px;
        border-radius: 10px;
        color:white
    }
        .AthRpt img {
           opacity:0.5;
           position:relative;
           }
        .AthRpt span{
           position:absolute;
           margin-top:5px;
           font-size:25px;
           margin-left:10px;
           opacity:1;
           z-index:100;
        }
    .AthRpt:hover img {
        z-index:10;
        cursor: pointer;
        opacity:1;
        transform: scale(1.1,1.1);
   
    }

    #bg1 {
        background-image: url("~/wwwroot/img/charles-gaudreault-xXofYCc3hqc-unsplash.jpg");
        background-size: cover;
        background-attachment: fixed;
    }
    #bg2 {
        background-image: url("~/wwwroot/img/sebastian-pociecha-FoSF9-4xTGg-unsplash.jpg");
        background-size: cover;
        background-attachment: fixed;
    }
    #bg3 {
        background-image: url("~/wwwroot/img/tech-daily-ztYmIQecyH4-unsplash (1).jpg");
        background-size: cover;
        background-attachment: fixed;
    }

    h4{
        margin-top:30px;
   
    }
    .footerDiv {
        background-color: rgb(95 5 5 / 0.91);
    
        z-index:100;
        position:absolute;
        top: auto;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        bottom: auto;
        overflow: hidden;
        width: 230px;
        height: 70px;
        padding: 5px;
        text-decoration:none;
        color:white;

        
    }
    .footerDiv p{
        font-size:13px;
    }
</style>
<div class="container text-light">
    <div class="align-content-center ">

        <div class=" pb-5 mb-4">

        </div>
        <br />
        <div class="row">

            <a id="PgLinks" asp-controller="Inventory" asp-action="ShowItems">
                <div id="bg1" class="border-dark AthRpt">
                    <div>
                        <span> Inventory</span>
                        <img src="~/img/stephen-dawson-qwtCeJ5cLYs-unsplash.jpg" alt="Plz Wait..." width="230" height="200" />
                    </div>
                    <div class="footerDiv">
                        <p>Total Items in the stock:  @ViewBag.totalItems</p>
                        <p>Total Sold Items:  @ViewBag.totalStaff</p>
                    </div>
                </div>
            </a>
            <a id="PgLinks" asp-controller="Home" asp-action="Registration">
                <div id="bg2" class="border-dark AthRpt">
                    <div>
                        <span>Registration</span>
                        <img src="~/img/sebastian-pociecha-FoSF9-4xTGg-unsplash.jpg" alt="Plz Wait..." width="230" height="200" />
                    </div>
                    <div class="footerDiv">

                        <p>Total Staff: @ViewBag.totalAthletes</p>
                        <p>Total Athletes: @ViewBag.totalStaff</p>
                    </div>
                </div>
            </a>
            <a id="PgLinks" asp-controller="Inventory" asp-action="ShowItems">
                <div id="bg3" class="border-dark AthRpt">
                    <div>
                        <span>Finance</span>
                        <img src="~/img/scott-graham-5fNmWej4tAA-unsplash.jpg" alt="Plz Wait..." width="230" height="200" />
                    </div>
                    <div class="footerDiv">
                        <p>Total Income: 0</p>
                        <p>Total Expense: 0</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>